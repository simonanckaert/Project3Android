<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtSessie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="U bent nu bezig met:"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtHuidigeSessie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sessie 1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/iv_bus2"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/bus" />

        <android.support.v7.widget.GridLayout
            android:id="@+id/gl_bus_passengers"
            android:layout_width="205dp"
            android:layout_height="101dp"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="65dp"
            app:rowCount="2">

            <ImageView
                android:id="@+id/iv_bus_seat8"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="20dp"
                android:visibility="invisible"
                app:layout_row="0"
                app:layout_rowSpan="1"
                app:srcCompat="@mipmap/mnstr8" />

            <ImageView
                android:id="@+id/iv_bus_seat7"
                android:layout_width="31dp"
                android:layout_height="30dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="20dp"
                android:visibility="invisible"
                app:layout_row="0"
                app:layout_rowSpan="1"
                app:srcCompat="@mipmap/mnstr7" />

            <ImageView
                android:id="@+id/iv_bus_seat6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="20dp"
                android:visibility="invisible"
                app:layout_row="0"
                app:layout_rowSpan="1"
                app:srcCompat="@mipmap/mnstr6" />

            <ImageView
                android:id="@+id/iv_bus_seat5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="20dp"
                android:visibility="invisible"
                app:layout_row="0"
                app:layout_rowSpan="1"
                app:srcCompat="@mipmap/mnstr5" />

            <ImageView
                android:id="@+id/iv_bus_seat4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="20dp"
                android:visibility="invisible"
                app:layout_column="0"
                app:layout_row="1"
                app:srcCompat="@mipmap/mnstr4" />

            <ImageView
                android:id="@+id/iv_bus_seat3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="20dp"
                android:visibility="invisible"
                app:layout_column="1"
                app:layout_row="1"
                app:srcCompat="@mipmap/mnstr3" />

            <ImageView
                android:id="@+id/iv_bus_seat2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="20dp"
                android:visibility="invisible"
                app:layout_column="2"
                app:layout_row="1"
                app:srcCompat="@mipmap/mnstr2" />

            <ImageView
                android:id="@+id/iv_bus_seat1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="6dp"
                android:layout_marginBottom="20dp"
                android:visibility="invisible"
                app:layout_column="3"
                app:layout_row="1"
                app:srcCompat="@mipmap/mnstr1" />
        </android.support.v7.widget.GridLayout>

        <ImageView
            android:id="@+id/iv_bus_gloss2"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/busgloss" />

    </FrameLayout>

</LinearLayout>